<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/apt_dip_15"
    android:layout_marginLeft="@dimen/apt_dip_30"
    android:layout_marginRight="@dimen/apt_dip_30"
    android:layout_marginTop="@dimen/apt_dip_15"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/locate_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/apt_dip_15"
            android:paddingTop="@dimen/apt_dip_15"
            android:text="输入点: "
            android:textSize="@dimen/apt_sp_13"/>

        <EditText
            android:id="@+id/et_point_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:inputType="text"
            android:hint="在这里输入点的名称"
            android:paddingBottom="@dimen/apt_dip_15"
            android:paddingTop="@dimen/apt_dip_15"
            android:textSize="@dimen/apt_sp_13"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_container"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locate_container"
        android:orientation="horizontal">

        <Button
            android:id="@+id/locate_ok"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="20"
            android:text="确 定"/>

        <Button
            android:id="@+id/locate_cancel"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="20"
            android:text="取消"/>
    </LinearLayout>
</RelativeLayout>