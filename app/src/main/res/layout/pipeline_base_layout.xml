<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_title_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 绘制titlebar -->
    <RelativeLayout
        android:id="@+id/base_titlebar"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:id="@+id/titlebar_back"
            android:background="@drawable/pipeline_line_delete"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sp_line_type"
            android:visibility="gone"
            android:layout_toRightOf="@id/titlebar_back"
            android:layout_marginLeft="@dimen/apt_dip_10"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:textColor="#111111"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/content_tv"
            android:textSize="15sp"
            android:textColor="#111111"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:visibility="visible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete_db"
            android:text="删除数据库"
            android:textSize="15sp"
            android:textColor="#111111"
            android:layout_toLeftOf="@id/content_tv"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

    </RelativeLayout>
</RelativeLayout>